<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/khung_fragment"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon17_chuadung"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon17_fragment"/>

                <TextView
                    android:id="@+id/date_chuadung"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="02/09/2024 18:30"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poster_chuadung"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/phimcam" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/age_chuadung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="18+"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name_chuadung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Cám"
                        android:textColor="@color/pink"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/style_chuadung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Kinh dị"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ticket_chuadung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ticket"/>

                        <TextView
                            android:id="@+id/soluong_chuadung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end|center"
                            android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_CGV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_cgv" />

                        <TextView
                            android:id="@+id/diachi_chuadung"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="3dp"
                            android:text="CGV Vincom Plaza Đà Nẵng"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_chuadung"
                    android:layout_width="111dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/khung_button3"
                    android:text="Hoàn vé"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_chuadung1"
                    android:layout_width="109dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/khung_button3"
                    android:text="Xuất vé"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

