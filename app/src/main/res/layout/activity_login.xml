<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    tools:context=".appCompatActivity.login">

    <LinearLayout

        android:layout_width="401dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="132dp"
            android:layout_height="101dp"
            android:layout_marginTop="-60dp"
            android:src="@drawable/icon17_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/khung_editview"
            android:hint="Email của bạn"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/khung_editview"
            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            android:hint="Mật khẩu của bạn"
            android:inputType="text"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/khung_editview"
            android:padding="18dp"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/register_lg"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="Đăng kí"
                android:textColor="@color/blue" />
        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-15dp"
            android:text="Hoặc"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login_btn_1"
            android:layout_width="334dp"
            android:layout_height="58dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/khung_fragment"
            android:drawableStart="@drawable/icon_gg"
            android:paddingHorizontal="30dp"
            android:text="Đăng nhập với google"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:text="Điều khoản sử dụng"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:text="Chính sách"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>