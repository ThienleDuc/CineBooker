<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".PhanCongQuoc.activity.xem_thong_tin_ve">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemback"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/iconback_vephim" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="start|center"
                android:text="Xem Thông Tin Vé"
                android:paddingLeft="50dp"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="206dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/khung_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingLeft="5dp"
                android:layout_width="290dp"
                android:layout_height="194dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon17_xemthongtin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon17_fragment"/>

                    <TextView
                        android:id="@+id/date_xemthongtin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text="02/09/2024 18:30"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/poster_xemthongtin"
                        android:layout_width="75dp"
                        android:layout_height="100dp"
                        android:src="@drawable/phimcam" />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/age_xemthongtin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="18+"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/red"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->

                        <!-- TextView hiển thị "Cám" xuống dòng -->
                        <TextView
                            android:id="@+id/name_xemthongtin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="Cám"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->
                        <TextView
                            android:id="@+id/style_xemthongtin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="2dp"
                            android:text="Kinh dị"
                            android:textColor="@android:color/black"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ticket_xemthongtin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/ticket"/>

                            <TextView
                                android:id="@+id/soluong_xemthongtin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 1"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/icon_CGV"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:src="@drawable/icon_cgv" />

                            <TextView
                                android:id="@+id/diachi_xemthongtin"
                                android:layout_width="266dp"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="3dp"
                                android:text="CGV Vincom Plaza Đà Nẵng"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:text="       Thời gian"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/time_phim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="                19:00 - 21:00"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date_xemthongtin1"
                        android:layout_width="159dp"
                        android:layout_height="wrap_content"
                        android:text="                                       Thứ 4, 02/10/2024"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Định dạng phim"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/đinhang_xuatphim"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                Phim 2D - Phu Đề"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Ghế ngồi"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/ghe_xemthongtin"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                                             G5"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Phòng chiếu"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/phong_xemthongtin"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                                             03"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/trangthai_xemthongtin"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                             Đã sử dụng"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>