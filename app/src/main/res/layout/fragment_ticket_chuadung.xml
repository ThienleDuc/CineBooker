<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".fragment.Ticket_chuadungFragment">
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_marginTop="-17dp"
            android:background="@drawable/khung_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="184dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/icon17_fragment"
                    android:gravity="start|center"
                    android:text="   02/09/2024 18:30"
                    android:textColor="@color/black"
                    android:textSize="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="100dp"
                        android:src="@drawable/phimcam" />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="start"
                        android:orientation="vertical">

                        <!-- Đặt kiểu chữ đậm -->

                        <!-- TextView hiển thị "Cám" xuống dòng -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18+"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/red"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="Cám"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="2dp"
                            android:text="Kinh dị"
                            android:textColor="@android:color/black"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ticket"

                                android:text=" 1"
                                android:textColor="@color/black" />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/icon_cgv"
                                android:gravity="start|center"
                                android:paddingHorizontal="20dp"
                                android:text=" CGV Vincom Plaza Đà Nẵng"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="190dp"
                    android:background="@drawable/khung_button3"
                    android:text="Xuất  vé"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/khung_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="184dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/icon17_fragment"
                    android:gravity="start|center"
                    android:text="   02/09/2024 18:30"
                    android:textColor="@color/black"
                    android:textSize="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="100dp"
                        android:src="@drawable/phimcam" />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="18+"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/red"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->

                        <!-- TextView hiển thị "Cám" xuống dòng -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="Cám"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="2dp"
                            android:text="Kinh dị"
                            android:textColor="@android:color/black"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ticket"

                                android:text=" 1"
                                android:textColor="@color/black" />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/icon_cgv"
                                android:gravity="start|center"
                                android:paddingHorizontal="20dp"
                                android:text=" CGV Vincom Plaza Đà Nẵng"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="190dp"
                    android:background="@drawable/khung_button3"
                    android:text="Xuất  vé"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>