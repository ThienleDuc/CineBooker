<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".LeDucThien.activity.VeChungToi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <!-- ImageView Logo -->
        <ImageView
            android:id="@+id/batdau"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon17_login"
            android:layout_gravity="center_horizontal"
            tools:ignore="ContentDescription" />

        <!-- TextView for Project Title -->
        <TextView
            android:id="@+id/tvTenDeTai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Đề Tài"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <!-- TextView for Project Description -->
        <TextView
            android:id="@+id/tvMoTaDeTai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xây dựng ứng dụng đặt vé xem phim trực tuyến"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            tools:ignore="HardcodedText" />

        <!-- RecyclerView for KhachHang -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_khach_hang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>