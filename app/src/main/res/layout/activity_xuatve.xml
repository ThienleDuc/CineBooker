<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appCompatActivity.xuatve">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemback"
                android:layout_width="38dp"
                android:layout_height="37dp"
                android:src="@drawable/iconback_vephim" />

            <TextView
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:gravity="start|center"
                android:text="       Xuất Vé Xem Phim"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="297dp"
            android:background="@drawable/khung_fragment"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="80dp"
                android:text="Đưa mã này đến phòng vé"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="269dp"
                android:layout_height="193dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/qr_xuatxe" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="206dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/khung_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="194dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="175dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/icon17_fragment"
                    android:gravity="start|center"
                    android:text="   02/09/2024 18:30"
                    android:textColor="@color/black"
                    android:textSize="8dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="100dp"
                        android:src="@drawable/phimcam" />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="18+"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/red"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->

                        <!-- TextView hiển thị "Cám" xuống dòng -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="Cám"
                            android:textColor="@color/pink"
                            android:textSize="15dp"
                            android:textStyle="bold" /> <!-- Đặt kiểu chữ đậm -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="2dp"
                            android:text="Kinh dị"
                            android:textColor="@android:color/black"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ticket"

                                android:text=" 1"
                                android:textColor="@color/black" />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableStart="@drawable/icon_cgv"
                                android:gravity="start|center"
                                android:paddingHorizontal="20dp"
                                android:text=" CGV Vincom Plaza Đà Nẵng"
                                android:textColor="@color/black"
                                android:textSize="10dp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"

                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:text="       Thời gian"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="                19:00 - 21:00"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="159dp"
                        android:layout_height="wrap_content"
                        android:text="                                       Thứ 4, 02/10/2024"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Định dạng phim"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView

                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                Phim 2D - Phu Đề"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Ghế ngồi"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView

                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                                             G5"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:text="Phòng chiếu"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView

                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                                             03"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="171dp"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng"
                        android:textColor="@color/black"
                        android:textSize="8dp" />

                    <TextView

                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="                             Đã sử dụng"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>